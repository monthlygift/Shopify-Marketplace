{% include 'breadcrumb' %}

<div class="row">
  {% include 'collection-sidebar' %}
  <div class="block-row col-xs-9 col-main">
    {% paginate collection.products by 32 %}
    <header class="page-header">
      <div class="img_cart">
        {% if settings.display_image_cat %}
        {{ 'img_cat.jpg' | asset_url | img_tag }}
        {% endif %}
      </div>

      <h2>{{ collection.title }}</h2>

      {% if collection.description != ''  %}
      <div class="rte">
        {{ collection.description }}
      </div>
      {% endif %}
    </header>
    
    {% include 'toolbar-list' %}
    
    {% comment %}
      Use class grid-uniform to have evenly sized columns clear
      each other properly at each breakpoint.
    {% endcomment %}
    <div class="product-list">
      {% if collection.products.size > 0 %}
        {% for product in collection.products %}
        {% include 'product-list-item' %}
        {% endfor %}
      {% else %}
        <p class="text-center">There are no products in this collection.</p>
      {% endif %}
    </div>
    
    {% if paginate.pages > 1 %}
    <div class="padding">
      {% include 'pagination-page' %}
    </div>
    {% endif %}
    {% endpaginate %}
  </div>
</div>

{% if settings.display_recently_viewed_products %} 
{% include 'recently-viewed-products' %}
{% endif %}